<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listViewSize"
    android:background="@drawable/ripple_bg"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/navdrawerItemIcon"
        android:layout_width="@dimen/listviewIconSize"
        android:layout_height="@dimen/listviewIconSize"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_tiny"
        android:padding="@dimen/inBetweenCategoryMargin"
        android:src="@drawable/ic_settings_white_48dp"
        android:tint="@color/secondary_text_default_material_light" />

    <TextView
        android:id="@+id/navdrawerItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_marginStart="72dp"
        android:layout_marginTop="@dimen/margin_tiny"
        android:text="@string/action_settings"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

</RelativeLayout>