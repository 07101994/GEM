<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NowPlaying"
    android:id="@+id/now_playing_classic_root_view"
    android:background="?attr/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/now_playing_classic_album_art_and_appbar">

        <com.animbus.music.customImpls.SquareImageViewWidth_Based
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/now_playing_classic_album_art"
            android:src="@drawable/album_art" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/now_playing_classic_appbar_root_view">

            <android.support.v7.widget.Toolbar
                android:layout_height="@dimen/toolbarSize"
                android:layout_width="match_parent"
                app:title="Now Playing"
                android:id="@+id/now_playing_classic_appbar"
                android:background="@drawable/gradient_black_ontop"
                android:fitsSystemWindows="true" />
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primaryGreyDark"
        android:id="@+id/now_playing_info_toolbar_root"
        android:orientation="vertical"
        android:layout_weight="100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryLight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/textView2"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_marginEnd="@dimen/margin_tiny"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:textColor="@color/primaryDark"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="@dimen/now_playing_seekbar_size"
                android:id="@+id/seekBar2"
                android:progress="40"
                android:layout_weight="1"
                android:padding="@dimen/margin_tiny"
                android:progressDrawable="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:id="@+id/textView4"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_marginEnd="@dimen/margin_tiny"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:textColor="@color/primaryDark"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/linearLayout" >

                    <ImageButton
                        android:layout_width="@dimen/now_playing_icon_size"
                        android:layout_height="@dimen/now_playing_icon_size"
                        android:id="@+id/imageButton5"
                        android:src="@drawable/ic_skip_previous_black_48dp"
                        android:background="@drawable/ripple_circle_dark"
                        android:scaleType="fitXY"
                        android:tint="?attr/primaryTextColor"
                        android:padding="@dimen/margin_medium"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="@dimen/now_playing_icon_size"
                        android:layout_height="@dimen/now_playing_icon_size"
                        android:id="@+id/imageButton6"
                        android:src="@drawable/ic_play_arrow_black_48dp"
                        android:background="@drawable/ripple_circle_dark"
                        android:scaleType="fitXY"
                        android:tint="?attr/primaryTextColor"
                        android:padding="@dimen/margin_medium"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="@dimen/now_playing_icon_size"
                        android:layout_height="@dimen/now_playing_icon_size"
                        android:id="@+id/imageButton9"
                        android:src="@drawable/ic_skip_next_black_48dp"
                        android:background="@drawable/ripple_circle_dark"
                        android:scaleType="fitXY"
                        android:tint="?attr/primaryTextColor"
                        android:padding="@dimen/margin_medium"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <SeekBar
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar3"
                    android:thumbTint="@color/primaryGreyLight"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="@color/primaryGreyLight" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listViewSizeBig"
            android:orientation="horizontal"
            android:background="@drawable/ripple_light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/item_now_playing_list_position"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_medium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="@dimen/margin_medium"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/item_now_playing_song_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="SONG_NAME"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_now_playing_song_artist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="SONG_ARTIST"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/now_playing_icon_size"
                android:layout_height="@dimen/now_playing_icon_size"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_repeat_black_48dp"
                android:background="?attr/ripple_circle"
                android:scaleType="fitXY"
                android:tint="?attr/secondaryTextColor"
                android:padding="@dimen/margin_medium"
                android:layout_gravity="center_vertical"
                android:onClick="repeatclicked" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>