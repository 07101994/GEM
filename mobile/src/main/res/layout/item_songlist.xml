 <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:background="?attr/colorPrimary">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/listViewSizeBig"
         android:orientation="horizontal"
         android:background="@drawable/ripple_bg">

         <com.animbus.music.custom_views.SquareImageViewHeight_Based
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:src="@drawable/album_art_alt_alt"
             android:id="@+id/songlist_song_albumart"
             android:visibility="gone" />

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_weight="1"
             android:paddingStart="@dimen/margin_small"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="12dp">

             <TextView
                 android:id="@+id/songlist_song_title"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:text="SONG_NAME"
                 android:textColor="?attr/primaryTextColor"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/songlist_song_artist"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:text="SONG_ARTIST"
                 android:textColor="?attr/secondaryTextColor"
                 android:textSize="14sp" />
         </LinearLayout>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0:00"
             android:id="@+id/songlist_song_duration"
             android:layout_gravity="center_vertical"
             android:textColor="?attr/secondaryTextColor"
             android:layout_margin="@dimen/margin_medium" />
     </LinearLayout>

 </FrameLayout>