<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Colors-->
    <color name="background_faithful">#ff0f0f0f</color>
    <color name="background_dark">#303030</color>
    <color name="background_light">#FAFAFA</color>
    <color name="greyDark">#ff2d2d2d</color>
    <color name="greyLight">#d1d1d1</color>
    <color name="faithfulPrimaryDark">#ff0f0f0f</color>
    <color name="faithfulPrimaryLight">#F5F5F5</color>
    <color name="issue_report_blue">#40c4ff</color>
    <color name="default_accent">#00B0FF</color>

    <!--Attrs-->
    <attr name="now_playing_toolbar_color" format="color" />
    <attr name="cardStyle" format="reference" />
    <attr name="ripple" format="reference" />
    <attr name="ripple_alt_color" format="reference" />
    <attr name="ripple_circle" format="reference" />
    <attr name="ripple_circle_alt_color" format="reference" />

    <!--Dimens-->


    <!--Styles-->
    <style name="AppTheme" parent="Base" />
    <style name="AppTheme.LightActionBar" parent="Base.LightActionBar" />
    <style name="AppTheme.Faithful" parent="Base.Faithful" />
    <style name="AppTheme.Faithful.LightActionBar" parent="Base.Faithful.LightActionBar" />
    <style name="AppTheme.Light" parent="Base.Light" />
    <style name="AppTheme.Light.DarkActionBar" parent="Base.Light.DarkActionBar" />

    <!--Base Styles-->
    <style name="Base" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="ripple">@drawable/ripple_dark</item>
        <item name="ripple_alt_color">@drawable/ripple_light</item>
        <item name="ripple_circle">@drawable/ripple_circle_dark</item>
        <item name="ripple_circle_alt_color">@drawable/ripple_circle_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="now_playing_toolbar_color">@color/background_light</item>
    </style>

    <style name="Base.LightActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Base.Faithful" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="android:windowBackground">@color/background_faithful</item>
         <item name="ripple">@drawable/ripple_dark</item>
        <item name="ripple_alt_color">@drawable/ripple_light</item>
        <item name="ripple_circle">@drawable/ripple_circle_dark</item>
        <item name="ripple_circle_alt_color">@drawable/ripple_circle_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="now_playing_toolbar_color">@color/background_light</item>
        <item name="android:colorBackground">@color/background_faithful</item>
    </style>

    <style name="Base.Faithful.LightActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="cardStyle">@style/CardView.Light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="ripple">@drawable/ripple_light</item>
        <item name="ripple_alt_color">@drawable/ripple_dark</item>
        <item name="ripple_circle">@drawable/ripple_circle_light</item>
        <item name="ripple_circle_alt_color">@drawable/ripple_circle_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="now_playing_toolbar_color">@color/background_faithful</item>
    </style>

    <style name="Base.Light.DarkActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>
</resources>