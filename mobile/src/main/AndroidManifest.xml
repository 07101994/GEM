            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".ui.activity.nowPlaying.NowPlaying"
            android:label="@string/title_activity_now_playing"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".ui.activity.IssueReportingActivity"
            android:theme="@style/GittyReporter" />

        <!-- Media button receiver -->

        <activity
            android:name=".ui.activity.settings.About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".ui.activity.settings.Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.settings.Settings" />
        </activity>

        <activity
            android:name=".ui.activity.search.SearchActivity"
            android:label="@string/title_activity_search"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.activity.mainScreen.MainScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search_config" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.mainScreen.MainScreen" />
        </activity>
        <activity android:name=".ui.activity.PlaylistDetails"/>
    </application>

